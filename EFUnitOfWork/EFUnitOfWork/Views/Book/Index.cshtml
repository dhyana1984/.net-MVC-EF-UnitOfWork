@model IEnumerable<EFUnitOfWork.Models.BookDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>二手书店</h2>

<p>
    @Html.ActionLink("Create New", "CreateEditBook","Book",null,new { @class= "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Published)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>

        <td>
            @Html.ActionLink("Edit", "CreateEditBook", "Book", new { id = item.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "DetailBook","Book", new { id=item.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "DeleteBook", "Book", new { id = item.ID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
